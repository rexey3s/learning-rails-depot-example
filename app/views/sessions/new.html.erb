<div class="depot-order-form">
<div class="panel panel-default">
<div class="panel-heading">
<div class="panel-title">
	<strong>Sign in</strong>
</div>
</div>
<div class="panel-body">
<% if flash[:alert] %>
      <div class="alert alert-danger alert-dismissible" role="alert">
       <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <p> <%= flash[:alert] %></p>
</div>
<% end %>
<%= form_tag :html => {:class => "form-horizontal",:role => "form"} do %>
<div class="form-group">
<%= label_tag :name, 'Name', class: "col-sm-2 control-label"  %>
<div class="col-sm-10"> 
<%= text_field_tag :name, params[:name], class: "form-control" %>
</div>
</div>
<br>
<div class="form-group">
<%= label_tag :password, 'Password', class: "col-sm-2 control-label" %> 
<div class="col-sm-10"> 
<%= password_field_tag :password, params[:password], class: "form-control" %>
</div>
</div><br>
<div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
<%= submit_tag "Login",class: "btn btn-primary" %>
</div>
</div>
<% end %>
</div>
</div>
</div>