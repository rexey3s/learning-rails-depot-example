<h1>Listing users</h1>
<% if notice %>
<div id="notice" class="alert alert-info alert-dismissible" role="alert">
          <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button><%= notice %>
<% end %>
<div class="panel panel-default">
<div class="panel-heading">
<div class="panel-title"><strong>Users</strong>
</div>
</div>
<div class="panel-body">
<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3">#</th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= link_to 'Show', user, class: "btn btn-info"%></td>
        <td><%= link_to 'Edit', edit_user_path(user),class: "btn btn-warning" %></td>
        <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' },class: "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<div class="btn-group btn-group-justified">

<%= link_to 'New User', new_user_path, class: "btn btn-success" %>
</div>
</div>

</div>
</div>

