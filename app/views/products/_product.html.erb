<div class="row entry">
 <div class="panel panel-default">
  <div class="panel-body">
   <div class="col-xs-6 col-md-4">
    <%=	 link_to image_tag(product.image_url, class: "img-rounded"), '#', class: "thumbnail" %>
   </div>
	 <div class="col-xs-12 col-md-8">
	  <h3><%= link_to product.title, product %></h3>
	   <%= sanitize(product.description) %>
	    <div class="price_line">
	     <div class="btn-group btn-group-sm">
	     <div class="btn btn-warning btn-sm"><span class="badge price"><%= number_to_currency(product.price) %> </span></div>

	     <%= button_to 'Add to Cart', line_items_path(product_id: product), class: "btn btn-success btn-sm", remote: true %>
	</div>
  </div>
 </div>
</div>
</div>
</div>