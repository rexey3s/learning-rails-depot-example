<h2><center>Your Cart</center></h2>
<table class="table table-hover">
<thead>
	<th>#</th>
	<th>Book Title</th>
	<th>Price per unit</th>
	<th>Quanity</th>
	<th>Price</th>
	<th></th>
</thead>
<tbody>
<%= render(cart.line_items) %>
<tr>
<td></td>
<td colspan="2"><b>Total Price</b></td>
<td><%= cart.line_items.count %></td>
<td><%= number_to_currency(@cart.total_price) %> </td>
<td></td>
</tr>
</tbody>
</table>
<td><%= button_to 'Empty cart', @cart, method: :delete, data:{ confirm: 'Are you sure?'},class: "btn btn-danger pull-right" %></td>